<header class="header_section dark-navbar shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-dark py-2">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="{{ asset('images/tickets.png') }}" alt="GoTix Logo"
                     style="height:28px;width:auto;margin-right:8px;">
                <span class="text-light fw-bold fs-5">GoTix</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'homepage' %}active{% endif %}" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'event' %}active{% endif %}" href="{{ path('event_list') }}">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'venue' %}active{% endif %}" href="{{ path('venue_list') }}">Venues</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'venue' %}active{% endif %}" href="{{ path('venue_list') }}">Categories</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto align-items-center">
                    {% set user_id = app.session.get('user_id') %}
                    {% set user_name = app.session.get('user_name') %}

                    {% if user_id %}
                        <li class="nav-item">
                            <span class="nav-link disabled text-light">Welcome, {{ user_name }}!</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('user_profile') }}"><i class="fa fa-user"></i> Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-shopping-cart"></i> Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="{{ path('auth_logout') }}"><i class="fa fa-sign-out-alt"></i> Logout</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('auth_login') }}"><i class="fa fa-sign-in-alt"></i> Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('auth_register') }}"><i class="fa fa-user-plus"></i> Register</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>

