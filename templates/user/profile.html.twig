{# templates/user/profile.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap');

    .profile-wrapper {
        padding: 2rem 0;
        font-family: "Quicksand", sans-serif;
        font-optical-sizing: auto;
        font-weight: 700;
        font-style: normal;
    }

    .nav-tabs .nav-link.active {
        background-color: #f8f9fa;
        border-color: #dee2e6 #dee2e6 #fff;
    }

    .profile-card {
        border-radius: 0.8rem;
        box-shadow: 0 4px 18px rgba(0, 0, 0, 0.05);
    }

    .profile-label {
        font-weight: 500;
        color: #6c757d;
    }

    .form-check-label {
        font-size: 0.95rem;
    }

    .form-section {
        margin-top: 1.2rem;
        padding-top: 1rem;
        border-top: 1px solid #dee2e6;
    }

    .twofa-card:hover {
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        transition: 0.3s ease-in-out;
    }

    .form-check-input {
        width: 2.2em;
        height: 1.2em;
        cursor: pointer;
    }
</style>

<div class="container profile-wrapper">
    <div class="row">
        <!-- Sidebar Tabs -->
        <div class="col-md-3 mb-3">
            <div class="list-group shadow-sm" id="profile-tabs" role="tablist">
                <a class="list-group-item list-group-item-action active" data-bs-toggle="list" href="#profile-info">
                    <i class="fa fa-user me-2"></i> Profile Info
                </a>
                <a class="list-group-item list-group-item-action" data-bs-toggle="list" href="#history">
                    <i class="fa fa-history me-2"></i> Purchase History
                </a>
                <a class="list-group-item list-group-item-action" data-bs-toggle="list" href="#change-password">
                    <i class="fa fa-key me-2"></i> Change Password
                </a>
                <a class="list-group-item list-group-item-action text-danger"
                   href="{{ path('auth_logout') }}">
                    <i class="fa fa-sign-out-alt me-2"></i> Logout
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="tab-content">
                <!-- Profile Info Tab -->
                <div class="tab-pane fade show active" id="profile-info">
                    <div class="card profile-card shadow-sm p-4">
                        <h4 class="mb-3">User Profile</h4>

                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <form method="POST" action="{{ path('user_update_username') }}">
                            <div class="mb-3">
                                <label class="form-label profile-label">Username</label>
                                <div class="input-group">
                                    <input type="text" name="username" class="form-control" value="{{ user.name }}" required>
                                    <button class="btn btn-outline-primary" type="submit">Save</button>
                                </div>
                            </div>
                        </form>

                        <div class="mb-3">
                            <label class="form-label profile-label">Email</label>
                            <input type="text" class="form-control" value="{{ email }}" disabled>
                        </div>

                        <div class="mb-3">
                            <label class="form-label profile-label">Joined On</label>
                            <input type="text" class="form-control" value="{{ user.createdAt|date('F j, Y, g:i A', 'Asia/Singapore') }}" disabled>
                        </div>

                        <form method="POST" action="{{ path('user_request_2fa_toggle') }}" id="twofa-form">
                            <div class="card border-0 shadow-sm p-3 mb-3 position-relative twofa-card">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="card-title mb-1">
                                            <i class="fa fa-shield-alt text-primary me-2"></i>
                                            Two-Factor Authentication (2FA)
                                            <i class="fa fa-info-circle text-muted ms-1" data-bs-toggle="tooltip" data-bs-placement="right"
                                               title="Adds an extra layer of security to your account by requiring a one-time password during login."></i>
                                        </h5>
                                        <div>
                                            <span class="badge {% if user.otpEnabled %}bg-success{% else %}bg-secondary{% endif %} mt-1">
                                                {% if user.otpEnabled %}Enabled{% else %}Disabled{% endif %}
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-check form-switch fs-5">
                                        <input class="form-check-input" type="checkbox" role="switch" name="otp_enabled"
                                               id="otp_enabled_switch"
                                               {{ user.otpEnabled ? 'checked' : '' }}>
                                        <label class="form-check-label" for="otp_enabled_switch">
                                            {{ user.otpEnabled ? 'Enabled' : 'Disabled' }}
                                        </label>
                                    </div>
                                </div>
                                <div class="text-end mt-3">
                                    <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#confirmModal">
                                        Save 2FA Settings
                                    </button>
                                </div>
                                <!-- Confirmation Pop-up Modal/Window for saving 2FA settings -->
                                <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="confirmModalLabel">Confirm 2FA Settings</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body" id="confirmModalMessage">
                                                Are you sure you want to update your 2FA settings?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-primary" id="confirmSubmitBtn">Yes, Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

    {# ------------- Purchase History Tab ------------- #}
                <div class="tab-pane fade" id="history">
                  <div class="card profile-card shadow-sm p-4">
                    <h4 class="mb-3">Purchase History</h4>

                    {% if purchases is not empty %}
                      {% for purchase in purchases %}
                        <div class="mb-4 border-bottom pb-3">
                          <h5>Receipt: {{ purchase.date|date('Y-m-d H:i') }}</h5>

                          <table class="table">
                            <thead>
                              <tr>
                                <th>Product</th>
                                <th>Qty</th>
                                <th>Unit Price</th>
                                <th>Line Total</th>
                              </tr>
                            </thead>
                            <tbody>
                              {% for item in purchase.items %}
                                <tr>
                                  <td>{{ item.name }}</td>
                                  <td>{{ item.qty }}</td>
                                  <td>${{ item.unit|number_format(2) }}</td>
                                  <td>${{ item.line|number_format(2) }}</td>
                                </tr>
                              {% endfor %}
                            </tbody>
                            <tfoot>
                              <tr>
                                <th colspan="3" class="text-end">Subtotal:</th>
                                <td>${{ purchase.subtotal|number_format(2) }}</td>
                              </tr>
                              <tr>
                                <th colspan="3" class="text-end">Booking Fee:</th>
                                <td>${{ purchase.bookingFee|number_format(2) }}</td>
                              </tr>
                              <tr class="fw-bold">
                                <th colspan="3" class="text-end">Grand Total:</th>
                                <td>${{ purchase.total|number_format(2) }}</td>
                              </tr>
                            </tfoot>
                          </table>

                          <button
                            class="btn btn-sm btn-outline-primary toggle-tickets"
                            data-target="#tickets-{{ purchase.id }}"
                          >
                            View Tickets & QR Codes
                          </button>

                          <div id="tickets-{{ purchase.id }}" class="mt-3 d-none">
                            {% set tickets = ticketsByPayment[purchase.id]|default([]) %}
                            {% if tickets %}
                              <div class="row">
                                {% for ticket in tickets %}
                                  <div class="col-md-4 text-center mb-3">
                                    <h6>{{ ticket.event }}<br/>{{ ticket.date|date('Y-m-d H:i') }}</h6>
                                    <img
                                        src="{{ path('ticket_qrcode', { token: ticket.token }) }}"
                                        alt="QR code for {{ ticket.event }}"
                                        width="150"
                                        class="mb-2"
                                    />
                                    <div><strong>Seat:</strong> {{ ticket.seat }}</div>
                                  </div>
                                {% endfor %}
                              </div>
                            {% else %}
                              <p class="text-muted">No tickets found for this payment.</p>
                            {% endif %}
                          </div>
                        </div>
                      {% endfor %}
                    {% else %}
                      <p class="text-muted">You haven’t made any purchases yet.</p>
                    {% endif %}
                  </div>
                </div>



                <!-- Change Password Tab -->
                <div class="tab-pane fade" id="change-password">
                    <div class="card profile-card shadow-sm p-4">
                        <h4 class="mb-3">Change Password</h4>

                        {% for label, messages in app.flashes('password_error') %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <form method="POST" action="{{ path('user_change_password') }}">
                            <div class="mb-3">
                                <label for="currentPassword" class="form-label">Current Password</label>
                                <input type="password" name="current_password" id="currentPassword" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">New Password</label>
                                <input type="password" name="new_password" id="newPassword" class="form-control" required>
                                <div id="passwordStrength" class="mt-1 small text-muted">Enter a password</div>
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                <input type="password" name="confirm_password" id="confirmPassword" class="form-control" required>
                            </div>
                            <div id="samePasswordMsg" class="text-danger small d-none mt-1">
                                New password must be different from the current password.
                            </div>
                            <div class="text-end">
                                <button type="submit" class="btn btn-primary" id="submitChangePasswordBtn" disabled>Change Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // 1) Initialize tooltip for 2FA description
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // 2) Password strength and matching logic…
        const passwordInput = document.getElementById('newPassword');
        const confirmInput  = document.getElementById('confirmPassword');
        const submitBtn     = document.getElementById('submitChangePasswordBtn');
        const strengthText  = document.getElementById('passwordStrength');

        function validatePasswordStrength(pwd) {
            return pwd.length >= 8 &&
                   /[A-Z]/.test(pwd) &&
                   /[a-z]/.test(pwd) &&
                   /\d/.test(pwd) &&
                   /[^A-Za-z0-9]/.test(pwd);
        }

        function updateStrength() {
            const pwd = passwordInput.value;
            let strength = 0;
            if (pwd.length >= 8) strength++;
            if (/[A-Z]/.test(pwd)) strength++;
            if (/[a-z]/.test(pwd)) strength++;
            if (/\d/.test(pwd)) strength++;
            if (/[^A-Za-z0-9]/.test(pwd)) strength++;

            let text, color;
            if (pwd.length === 0) {
                text  = 'Ensure your new password contains 8+ chars, a number, upper & lower case, and a special char.';
                color = 'text-muted';
            } else if (strength <= 2) {
                text  = 'Weak. Make it 8+ chars with number, upper & lower case, and a special char.';
                color = 'text-danger';
            } else if (strength <= 4) {
                text  = 'Moderate. Add more variety for a stronger password.';
                color = 'text-warning';
            } else {
                text  = 'Strong password.';
                color = 'text-success';
            }

            strengthText.textContent = text;
            strengthText.className    = `mt-1 small ${color}`;
        }

        function isSameAsCurrentPassword() {
            const current = document.getElementById('currentPassword')?.value;
            return current && passwordInput.value === current;
        }

        function checkFormValidity() {
            const pwd       = passwordInput.value;
            const confirm   = confirmInput.value;
            const isStrong  = validatePasswordStrength(pwd);
            const isMatch   = pwd !== '' && pwd === confirm;
            const isSame    = isSameAsCurrentPassword();
            const errorMsg  = document.getElementById('samePasswordMsg');

            errorMsg.classList.toggle('d-none', !isSame);
            confirmInput.setCustomValidity(isMatch ? '' : 'Passwords do not match');
            submitBtn.disabled = !isStrong || !isMatch || isSame;
        }

        passwordInput.addEventListener('input', () => {
            updateStrength();
            checkFormValidity();
        });
        confirmInput.addEventListener('input', checkFormValidity);

        // 3) Toggle tickets & QR Codes under each receipt
        document.querySelectorAll('.toggle-tickets').forEach(function(btn) {
            btn.addEventListener('click', function() {
                const tgt = document.querySelector(btn.dataset.target);
                if (tgt) {
                    tgt.classList.toggle('d-none');
                }
            });
        });
    });
</script>
{% endblock %}
    