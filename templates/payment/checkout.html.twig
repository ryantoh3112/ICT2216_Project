{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5 mb-5" style="min-height: 70vh;">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="shadow-sm p-4" style="background-color: #f9f9f9; border-radius: 10px;">

        <h2 class="text-center mb-3">ðŸ›’ Your Cart</h2>
        <hr>

        {% set subtotal = 0 %}
        {% set booking_fee = 3 %}

        {% if groupedCartItems is empty %}
          <p class="text-center text-muted">Your cart is empty.</p>
        {% else %}
          {# List each grouped item #}
          {% for key, item in groupedCartItems %}
            {% set line_total = item.price * item.quantity %}
            {% set subtotal = subtotal + line_total %}

            <div class="d-flex justify-content-between mb-2">
              <span>{{ item.name }} (x{{ item.quantity }})</span>
              <span>${{ line_total|number_format(2, '.', ',') }}</span>
            </div>
          {% endfor %}

          {# Totals #}
          {% set total_fee = booking_fee * (groupedCartItems|length) %}
          {% set total     = subtotal + total_fee %}

          <hr>
          <div class="d-flex justify-content-between">
            <span><strong>Subtotal:</strong></span>
            <span>${{ subtotal|number_format(2, '.', ',') }}</span>
          </div>
          <div class="d-flex justify-content-between">
            <span><strong>Booking Fee:</strong></span>
            <span>${{ total_fee|number_format(2, '.', ',') }}</span>
          </div>
          <div class="d-flex justify-content-between mb-3">
            <span><strong>Total:</strong></span>
            <span><strong>${{ total|number_format(2, '.', ',') }}</strong></span>
          </div>

          <button id="checkout-button" class="btn btn-primary w-100">
            Pay ${{ total|number_format(2, '.', ',') }}
          </button>
        {% endif %}

      </div>
    </div>
  </div>
</div>

{# Stripe integration #}
{% if groupedCartItems is not empty %}
  <script src="https://js.stripe.com/v3/"></script>
  <script>
  (function() {
    const stripe = Stripe('{{ stripe_public_key }}');
    const payBtn = document.getElementById('checkout-button');

    payBtn.addEventListener('click', function () {
      fetch("/create-checkout-session", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({})
      })
      .then(async res => {
        if (!res.ok) throw new Error(await res.text());
        return res.json();
      })
      .then(data => stripe.redirectToCheckout({ sessionId: data.id }))
      .catch(err => alert("Error: " + err.message));
    });
  })();
  </script>
{% endif %}
{% endblock %}
