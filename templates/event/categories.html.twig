{% extends 'base.html.twig' %}

{% block body %}
<section class="event_categories layout_padding py-5">
    <div class="container">
        <div class="row">
            {% for category in categories %}
                <div class="col-md-6 col-lg-4 mb-4">
                    {# <a href="{{ path('event_category', {'category': category.name|lower|replace({' ': '-', ',': '', '&': 'and'})}) }}" class="category-link text-decoration-none"> #}
                        <div class="category-card position-relative overflow-hidden shadow-sm rounded-4">
                            <img src="{{ asset(category.image) }}" class="img-fluid category-img w-100" alt="{{ category.name }}">
                            
                            <div class="category-label text-white fw-bold px-3 py-2">
                                {{ category.name }}
                            </div>

                            <div class="category-overlay d-flex flex-column justify-content-center align-items-center text-center px-3">
                                <p class="category-description mb-0">{{ category.description }}</p>
                            </div>
                        </div>
                    {# </a> #}
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
    @import url('https://fonts.googleapis.com/css2?family=PT+Sans&display=swap');

    .category-card {
        height: 250px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .category-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .category-img {
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .category-card:hover .category-img {
        transform: scale(1.05);
    }

    .category-label {
        font-family: "PT Sans", sans-serif;
        font-weight: 400;
        font-style: normal;
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%; /* Makes the background stretch full width */
        background: rgba(0, 0, 0, 0.6); /* Semi-transparent black */
        color: white;
        padding: 0.5rem 1rem;
        text-align: center; /* Center the text inside */
        font-size: 1.2rem;
        z-index: 2;
        animation: slideInFromBottom 0.5s ease-out forwards;
        opacity: 0;
    }

    /* Keyframes for entrance */
    @keyframes slideInFromBottom {
        from {
            transform: translateY(100%);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* Overlay that appears on hover */
    .category-overlay {
        position: absolute;
        top: 0; left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6); /* darkens image */
        opacity: 0;
        color: #fff;
        transition: opacity 0.3s ease;
    }

    .category-card:hover .category-overlay {
        opacity: 1;
    }

    .category-title {
        font-size: 1.3rem;
        font-weight: 600;
    }

    .category-description {
        font-size: 0.95rem;
        line-height: 1.4;
    }
</style>
{% endblock %}