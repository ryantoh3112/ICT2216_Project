{% extends 'base.html.twig' %}

{% block body %}
    <!-- events section -->
    <section class="event_section layout_padding">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>Our Events</h2>
            </div>

            <div class="row">
                {% for event in events %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="box flex-fill">
                            <div class="img-box mb-2">
                                <img src="{{ asset(event.image ?: 'images/default-event.jpg')}}" alt="Event Image" class="img-fluid rounded" >
                            </div>
                            <div class="detail-box">
                                <h5 class="fw-bold">
                                    {{ event.name }}
                                </h5>
                                <a href="#" class="btn btn-outline-primary mt-2">View More</a>
                        
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>No events found.</p>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}