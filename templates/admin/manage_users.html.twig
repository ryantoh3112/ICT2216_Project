{# templates/admin/manage_users.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {# Sidebar - Left column (fixed width) #}
            <nav class="col-2 bg-dark text-white min-vh-100 p-3">
                <ul class="nav flex-column mt-4">
                    <li class="nav-item"><a href="{{ path('admin_dashboard') }}" class="nav-link text-white">Dashboard</a></li>
                    <li class="nav-item"><a href="{{ path('admin_manage_events') }}" class="nav-link text-white">Manage Events</a></li>
                    <li class="nav-item"><a href="{{ path('admin_manage_users') }}" class="nav-link text-white">Manage Users</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white">Reports</a></li>
                </ul>
            </nav>
    
            <main class="col-10 p-4">
                <h1>Manage Users</h1>
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Created At</th>
                            <th>Last Login</th>
                            <th>Updated At</th>
                            <th>Failed Login Count</th>
                            <th>Account Status</th>
                            <th>Locked At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ user.role }}</td>
                                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i') : '-' }}</td>
                                <td>{{ user.lastLoginAt ? user.lastLoginAt|date('Y-m-d H:i') : '-' }}</td>
                                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i') : '-' }}</td>
                                <td>{{ user.failedLoginCount }}</td>
                                <td>{{ user.accountStatus }}</td>
                                <td>{{ user.lockedAt ? user.lockedAt|date('Y-m-d H:i') : '-' }}</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editUserModal{{ user.id }}">Edit</a>
                                    <a href="#" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                                </td>
{# commented out
                                    <td>
                                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                                        <a href="{{ path('admin_user_suspend', {'id': user.id}) }}" class="btn btn-sm btn-secondary">Suspend</a>
                                        <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                                    </td>
                                #}
                            </tr>
                            <div class="modal fade" id="editUserModal{{ user.id }}" tabindex="-1" aria-labelledby="editUserLabel{{ user.id }}" aria-hidden="true">
                                <div class="modal-dialog">
                                    <form action="#" method="post">
{# <form action="{{ path('admin_user_update', {'id': user.id}) }}" method="post"> #}
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="editUserLabel{{ user.id }}">Edit User {{ user.name }}</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row mb-3">
                                                <div class="col-12">
                                                    <label for="name{{ user.id }}" class="form-label">Name</label>
                                                    <input type="text" name="name" id="name{{ user.id }}" class="form-control" value="{{ user.name }}">
                                                </div>
                                                </div>
                                                <div class="row mb-3">
                                                <div class="col-12">
                                                    <label for="role{{ user.id }}" class="form-label d-block">Role</label>
                                                    <select name="role" id="role{{ user.id }}">
                                                        <option value="ROLE_USER" {% if user.role == 'ROLE_USER' %}selected{% endif %}>ROLE_USER</option>
                                                        <option value="ROLE_ADMIN" {% if user.role == 'ROLE_ADMIN' %}selected{% endif %}>ROLE_ADMIN</option>
                                                    </select>
                                                </div>
                                                </div>
                                                <div class="row mb-3">
                                                <div class="col-12">
                                                    <label for="status{{ user.id }}" class="form-label d-block">Account Status</label>
                                                    <select name="accountStatus" id="status{{ user.id }}">
                                                        <option value="active" {% if user.accountStatus == 'active' %}selected{% endif %}>Active</option>
                                                        <option value="suspended" {% if user.accountStatus == 'suspended' %}selected{% endif %}>Suspended</option>
                                                    </select>
                                                </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center">No users found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>    
        </div>   
    </div> 
{% endblock %}