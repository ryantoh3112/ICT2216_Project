{# templates/admin/manage_users.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
                        {% set current_route = app.request.attributes.get('_route') %}

            <ul class="nav nav-tabs" id="dashboardTabs">
                <li class="nav-item">
                    <a
                        class="nav-link {{ current_route == 'admin_manage_events' ? 'active' : '' }}"
                        href="{{ path('admin_manage_events') }}"
                    >
                        Manage Events
                    </a>
                </li>
                <li class="nav-item">
                    <a
                        class="nav-link {{ current_route == 'admin_manage_users' ? 'active' : '' }}"
                        href="{{ path('admin_manage_users') }}"
                    >
                        Manage Users
                    </a>
                </li>
            </ul>
    
            <main class="container-fluid">
                <h1>Manage Users</h1>
                
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1100">
                            <div class="toast align-items-center text-bg-{{ label == 'success' ? 'success' : (label == 'error' ? 'danger' : 'info') }} border-0 show" role="alert">
                                <div class="d-flex">
                                    <div class="toast-body">
                                        {{ message }}
                                    </div>
                                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover w-auto">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Created At</th>
                            <th>Last Login</th>
                            <th>Updated At</th>
                            <th>Failed Login Count</th>
                            <th>Account Status</th>
                            <th>Locked At</th>
                            <th>OTP</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ user.auth ? user.auth.email : 'â€”' }}</td>
                                <td>{{ user.role }}</td>
                                <td>{{ user.createdAt ? user.createdAt|date('F j, Y, g:i A', 'Asia/Singapore') : '-' }}</td>
                                <td>{{ user.lastLoginAt ? user.lastLoginAt|date('F j, Y, g:i A', 'Asia/Singapore') : '-' }}</td>
                                <td>{{ user.updatedAt ? user.updatedAt|date('F j, Y, g:i A', 'Asia/Singapore') : '-' }}</td>
                                <td>{{ user.failedLoginCount is not null ? user.failedLoginCount : '-' }}</td>
                                <td>{{ user.accountStatus is not null ? user.accountStatus : '-'  }}</td>
                                <td>{{ user.lockedAt ? user.lockedAt|date('F j, Y, g:i A', 'Asia/Singapore') : '-' }}</td>
                                <td>{% if user.otpEnabled %}Enabled{% else %}Disabled{% endif %}</td>
                                <td>
                                    <div class="d-flex gap-2">
                                    <a href="#" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editUserModal{{ user.id }}">Edit</a>

                                    <form method="post" action="{{ path('admin_delete_user', {'id': user.id}) }}" id="deleteUserForm{{ user.id }}" style="display:inline-block">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ user.id) }}">
                                        <button type="button" 
                                                class="btn btn-sm btn-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#confirmDeleteUserModal{{ user.id }}">
                                            Delete
                                        </button>
                                    </form>
                                    </div>
                                </td>
                            </tr>

                            <!-- Confirmation Pop-up Modal/Window for deleting user-->
                            <div class="modal fade" id="confirmDeleteUserModal{{ user.id }}" tabindex="-1" aria-labelledby="confirmDeleteUserModalLabel{{ user.id }}" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="confirmDeleteUserModalLabel{{ user.id }}">Confirm User Deletion</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete the user "<strong>{{ user.name }}</strong>"?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="button" class="btn btn-danger" 
                                                    onclick="document.getElementById('deleteUserForm{{ user.id }}').submit();">
                                                Yes, Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            {# Edit Modal #}
                            <div class="modal fade" id="editUserModal{{ user.id }}" tabindex="-1" aria-labelledby="editUserLabel{{ user.id }}" aria-hidden="true">
                                <div class="modal-dialog">
                                    <form action="{{ path('admin_update_user', {'id': user.id}) }}" method="post">
                                    <input type="hidden" name="_token" value="{{ csrf_token('update_user_' ~ user.id) }}">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="editUserLabel{{ user.id }}">Edit User: {{ user.name }}</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row mb-3">
                                                <div class="col-12">
                                                    <label for="name{{ user.id }}" class="form-label">Name</label>
                                                    <input type="text" name="name" id="name{{ user.id }}" class="form-control" value="{{ user.name }}" required>
                                                </div>
                                                </div>
                                                <div class="row mb-3">
                                                <div class="col-12">
                                                    <label for="role{{ user.id }}" class="form-label d-block">Role</label>
                                                    <select name="role" id="role{{ user.id }}">
                                                        <option value="ROLE_USER" {% if user.role == 'ROLE_USER' %}selected{% endif %}>ROLE_USER</option>
                                                        <option value="ROLE_ADMIN" {% if user.role == 'ROLE_ADMIN' %}selected{% endif %}>ROLE_ADMIN</option>
                                                    </select>
                                                </div>
                                                </div>
                                                <div class="row mb-3">
                                                <div class="col-12">
                                                    <label for="status{{ user.id }}" class="form-label d-block">Account Status</label>
                                                    <select name="accountStatus" id="status{{ user.id }}">
                                                        <option value="active" {% if user.accountStatus == 'active' %}selected{% endif %}>Active</option>
                                                        <option value="locked" {% if user.accountStatus == 'locked' %}selected{% endif %}>Locked</option>
                                                    </select>
                                                </div>
                                                </div>
                                                <div class="row mb-3">
                                                <div class="col-12">
                                                    <label for="otp{{ user.id }}" class="form-label d-block">OTP</label>
                                                    <select name="otpEnabled" id="otp{{ user.id }}">
                                                        <option value=1 {% if user.otpEnabled == '1' %}selected{% endif %}>Enabled</option>
                                                        <option value=0 {% if user.otpEnabled == '0' %}selected{% endif %}>Disabled</option>
                                                    </select>
                                                </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center">No users found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                </div>
            </main>    
        </div>   
    </div> 
{% endblock %}