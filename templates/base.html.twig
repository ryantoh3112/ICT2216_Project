<script>
let ajaxFailCount = 0;
const CAPTCHA_THRESHOLD = 3;

function shouldShowCaptcha() {
  return ajaxFailCount >= CAPTCHA_THRESHOLD;
}

function incrementFailCount() {
  ajaxFailCount++;
  if (shouldShowCaptcha()) {
    document.querySelectorAll('.recaptcha-wrapper').forEach(el => el.style.display = 'block');
  }
}

function resetFailCount() {
  ajaxFailCount = 0;
  document.querySelectorAll('.recaptcha-wrapper').forEach(el => el.style.display = 'none');
}
</script>

