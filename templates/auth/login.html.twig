{% extends 'base.html.twig' %}

{% block body %}

  <div>
    <section class="vh-100">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-6 text-black">
            <div class="px-5 ms-xl-4">
              <i class="fas fa-regular fa-user fa-2x me-3 pt-5 mt-xl-4"></i>
              <span class="h1 fw-bold mb-0">My GoTix</span>
            </div>

            <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

              <form method="POST" action="{{ path('auth_login') }}" style="width: 23rem;">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'success' ? 'success' : (label == 'error' ? 'danger' : 'info') }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                <div data-mdb-input-init class="form-outline mb-4">
                  <input type="email" id="email_login" name="email" class="email_login form-control form-control-lg" required />
                  <label class="form-label" for="email_login">Email address</label>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                  <input type="password" id="passwd_login" name="password" class="passwd_login form-control form-control-lg" required />
                  <label class="form-label" for="passwd_login">Password</label>
                </div>

                <div class="pt-1 mb-4">
                  <button data-mdb-button-init data-mdb-ripple-init class="btn btn-info btn-lg btn-block" id="login_btn" type="submit">Login</button>
                </div>
                
                <p class="small mb-5 pb-lg-2">
                  <a class="text-muted" href="{{ path('auth_forgot_password_form') }}">Forgot password?</a>
                </p>
              
                <p>Don't have an account? <a href="{{ path('auth_register') }}" class="link-info">Register here</a></p>

              </form>

            </div>

          </div>
          <div class="col-sm-6 px-0 d-none d-sm-block">
            <img src="{{ asset('images/concert.jpg') }}"
              alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
          </div>
        </div>
      </div>
    </section>
  </div>
{% endblock %}